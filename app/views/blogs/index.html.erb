<div class="col-md-8">
<% @posts.each_with_index do |post, index| %>
  <% if index >= 5 %>
  <% break %>
  <% else %>
  <h1><%= post.title %></h1>
  <p><%= post.updated_at %></p>
  <p><%= post.body.truncate(50) %></p>
  <%= link_to '続きを読む', blog_path(post.id), class: "btn btn-default" %>
  <% end %>
  <% index += 1 %>
<% end %>
</div>
<div class="col-md-4">
  <div class="thumbnail">
    <% author = Author.first %>
    <img src="<%= author.image_url %>" alt="著者イメージ">
    <div class="caption">
      <h3><%= author.name %></h3>
      <p><%= author.description %></p>
    </div>
  <div class="list-group">
    <% @posts.each_with_index do |post, index| %>
      <%# ６個目以上の記事の場合はBreak（each文をその場で終わらせる） %>
      <% if index >= 5
           break
         end
      %>
      <%# link_to post.title, post_path(post.id), class: "list-group-item" %>
      <a href="/posts/<%= post.id %>" class="list-group-item"><%= post.title %></a>
    <% end %>
  </div>
  </div>
</div>
